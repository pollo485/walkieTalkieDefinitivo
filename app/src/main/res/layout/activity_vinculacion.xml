<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_background"
    tools:context=".Vinculacion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-14dp"
        android:orientation="vertical"
        app:cardBackgroundColor="#C8AFED"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#7945F0"
            android:orientation="vertical">

            <Switch
                android:id="@+id/activar_sw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activado"
                android:textSize="25sp"
                android:checked="false"
                android:textStyle="bold"
                android:height="48dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C8AFED"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dispositivos Vinculados"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="#009688"
                android:textColor="@color/black"/>

            <ListView
                android:id="@+id/lv_vinculados"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Dispositivos Disponibles"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="#009688"
                android:textColor="@color/black"/>

            <ListView
                android:id="@+id/lv_disponibles"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>

        <Button
            android:id="@+id/volver_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#AD7DF2"
            android:padding="20dp"
            android:gravity="center"
            android:text="Volver"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>